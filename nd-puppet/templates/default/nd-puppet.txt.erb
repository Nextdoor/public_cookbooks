# This Facter file was installed by the nd-puppet::config cookbook.

# The node_name passed to Puppet to define the node type
<% if @puppet_node %>puppet_node=<%= @puppet_node %>|<%= @hostname %><% else %>puppet_node=<%= @hostname %><% end -%>

# The environment passed to Puppet to define the environment type
puppet_environment=<%= @puppet_environment %>

# The puppet server name passed in
puppet_server=<%= @puppet_server %>
puppet_ca_server=<%= @puppet_ca_server %>

<% if @facts %># Custom facts supplied from the rs-puppet::config::facts input
<% @facts.each do |fact| %><%= fact %>
<% end %><% end %>
